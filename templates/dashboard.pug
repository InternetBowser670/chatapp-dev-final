doctype html
html
  head
    title Chat Application
    link(rel='icon', href='/favicon.ico', type='image/x-icon')
    link(rel="stylesheet", href="/styles/main")
    script(src="/scripts/scroll")
  body
      
    h1 Chat Application
    h2 Welcome, #{name}
    h2 Chat List
    ul(class="scrollable2" id=chatList)
      each chat in chats
        li
          a(href=`/chats/${chat}`) #{chat}
  
    form(action="/createchats" method="post")
      div
        label(for="chatname") Name:
        input(type="text" name="chatname" required)
      div
        label(for="password") Password:
        input(type="text" name="password" required)
      div
        button(type="submit") Submit
    p(id="responsedata")